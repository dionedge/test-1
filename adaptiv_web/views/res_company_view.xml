<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_company_form_inherit" model="ir.ui.view">
      <field name="name">res.company.form.inherit</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page" position="after">
          <page string="Branding">
            <group>
              <group string="Logo">
                <field name="svg_logo"/>
                <field name="svg_logo_inverse"/>
                <field name="png_logo"/>
                <field name="png_logo_inverse"/>
              </group>
              <group string="Colors">
                <field name="color_primary"/>
                <field name="color_optional"/>
                <field name="color_success"/>
                <field name="color_warning"/>
                <field name="color_danger"/>
                <field name="color_info"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
